<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SecondsActivity">

    <TextView
        android:id="@+id/textViewEmailAddress"
        android:layout_width="94dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="159dp"
        android:text="Email Address" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="258dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Adding functions" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="146dp"
        android:layout_height="90dp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="34dp"
        android:layout_toStartOf="@+id/buttonCall"
        android:hint="Phone number"
        android:inputType="phone" />

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="82dp"
        android:text="Call number" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPhone"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="70dp"
        android:layout_toStartOf="@+id/buttonChangePicture"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/buttonChangePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCall"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="74dp"
        android:text="Change picture" />

</RelativeLayout>
